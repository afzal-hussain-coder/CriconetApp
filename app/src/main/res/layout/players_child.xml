<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/li"
    android:layout_marginTop="@dimen/_2sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_smoke"
        android:paddingTop="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/im_profile"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/user_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/im_profile"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/opensans_extrabold"
                android:text="Pet Cummins"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />
            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="KKR"
                android:textColor="@color/dim_grey"
                android:textSize="@dimen/_7sdp" />
            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/opensans_bold"
                android:text="KKR"
                android:textColor="@color/black_light"
                android:textSize="@dimen/_7sdp" />
        </LinearLayout>

            <CheckBox
                android:id="@+id/cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:button="@drawable/selector"
                />
        <ImageView
            android:id="@+id/im_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:contentDescription="@string/app_name" />
        <ImageView
            android:id="@+id/im_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_remove_circle_outline_black_24dp"
            android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/li_role"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/role"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/_7sdp" />
                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/opensans_extrabold"
                    android:text="KKR"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/_7sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_battingStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/battingStyle"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/_7sdp" />
                <TextView
                    android:id="@+id/tv_battingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/opensans_extrabold"
                    android:text="KKR"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/_7sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_ballingStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/ballingStyle"
                    android:textColor="@color/dim_grey"
                    android:textSize="@dimen/_7sdp" />
                <TextView
                    android:id="@+id/tv_bollingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/opensans_extrabold"
                    android:text="KKR"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/_7sdp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray"
        />

</LinearLayout>