<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root_view_academy"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_16sdp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >
    <RelativeLayout
        android:id="@+id/slideView_academy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/canvas_top_curve_white_bg">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center_horizontal"
            android:text="@string/slide_down"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@android:color/darker_gray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/mid"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/line_gradient"/>


                <RelativeLayout
                    android:id="@+id/lay_specilization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:background="@drawable/bg_coach_profile"
                    android:layout_marginTop="@dimen/_10sdp">
                    <RelativeLayout
                        android:id="@+id/rl_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivProfileImagee_academy"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/placeholder_user"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/ivProfileImagee_academy"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvCoachNamee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:textColor="@color/light_text_color"
                                android:textSize="@dimen/_12sdp"
                                app:fontFamily="@font/opensans_bold"
                                app:layout_constraintTop_toBottomOf="@+id/ivProfileImage"
                                android:text="Ranjeet Kumar" />
                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvCoachName"
                                android:layout_gravity="left"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="kjbckjaB"
                                android:textColor="@color/light_text_color"
                                android:textSize="@dimen/_8sdp"
                                app:fontFamily="@font/opensans_extrabold" />
                            <LinearLayout
                                android:id="@+id/top"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_academy"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bookingIdd"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/grey"
                                    android:textSize="@dimen/_9sdp"
                                    app:fontFamily="@font/opensans_bold"
                                    />
                                <TextView
                                    android:id="@+id/tvBookingId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="ID1-294"
                                    android:textColor="@color/light_text_color"
                                    android:textSize="@dimen/_8sdp"
                                    app:fontFamily="@font/opensans_extrabold"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>



                    <TextView
                        android:id="@+id/tv_training"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_top"
                        android:background="@drawable/bg_academy"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="kjbckjaB"
                        android:textColor="@color/logWarn"
                        android:textSize="@dimen/_8sdp"
                        app:fontFamily="@font/opensans_extrabold" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_dotted"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/e_coaching"
                            android:textColor="@color/gray"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_9sdp"
                            app:fontFamily="@font/opensans_bold"
                            />
                        <TextView
                            android:id="@+id/tvSessionValid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID1-294"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/logWarn"
                            android:textSize="@dimen/_8sdp"
                            app:fontFamily="@font/opensans_extrabold"
                            />

                    </LinearLayout>
                    <!--         sessionTime-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_dotted"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/session_time"
                            android:textColor="@color/gray"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_9sdp"
                            app:fontFamily="@font/opensans_bold"
                            />
                        <TextView
                            android:id="@+id/tvSessionTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID1-294"
                            android:textColor="@color/logWarn"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_8sdp"
                            app:fontFamily="@font/opensans_extrabold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_dotted"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_date"
                            android:textColor="@color/gray"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_9sdp"
                            app:fontFamily="@font/opensans_bold"
                            />
                        <TextView
                            android:id="@+id/tvBookingDate_academy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID1-294"
                            android:textColor="@color/light_text_color"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_8sdp"
                            app:fontFamily="@font/opensans_extrabold"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/li_paid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_dotted"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:visibility="visible"
                        android:paddingBottom="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/session_paid_amount"
                            android:textColor="@color/gray"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_9sdp"
                            app:fontFamily="@font/opensans_bold"
                            />
                        <TextView
                            android:id="@+id/tvSessionAmount_academy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID1-294"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/app_green"
                            android:textSize="@dimen/_8sdp"
                            app:fontFamily="@font/opensans_extrabold"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/li_paylater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_dotted"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:visibility="gone"
                        android:paddingBottom="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/session_paid_amount_later"
                            android:textColor="@color/green"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/opensans_bold"
                            />
                        <TextView
                            android:id="@+id/tvSessionAmount_paylater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID1-294"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/app_green"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/opensans_semibold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_dotted"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/booking_status"
                            android:textColor="@color/gray"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_9sdp"
                            app:fontFamily="@font/opensans_bold"
                            />
                        <TextView
                            android:id="@+id/tvBookingStataus_academy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID1-294"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/app_green"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/opensans_extrabold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/fl_join_session_academy"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:visibility="gone"
                            android:background="@color/join_button_color">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/app_red"/>
                            <View
                                android:layout_width="0.9dp"
                                android:layout_height="match_parent"
                                android:background="@color/app_red"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_gravity="bottom"
                                android:background="@color/app_redd"/>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:background="@color/app_redd"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/join_session"
                                android:textAllCaps="true"
                                app:fontFamily="@font/opensans_bold"
                                android:textColor="@color/light_text_color"
                                android:textSize="@dimen/_10sdp"/>

                        </FrameLayout>




                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
