<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bckground_light">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/canvas_theme"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="@string/terms_pay_later_condition"
                        android:textAllCaps="false"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center_vertical"
                                android:text="@string/name"
                                android:textAllCaps="false"
                                android:textColor="@color/light_text_color"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/address"
                                android:textAllCaps="false"
                                android:textColor="@color/light_text_color"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/pin_code"
                                android:textAllCaps="false"
                                android:textColor="@color/light_text_color"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/students_name"
                                android:textColor="@color/app_green"
                                android:textSize="@dimen/_10sdp"
                                app:fontFamily="@font/opensans_bold" />

                            <EditText
                                android:id="@+id/edit_fullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/pay_later_edit_bg"
                                android:fontFamily="@font/opensans_semibold"
                                android:hint="@string/enter_your_full_name"
                                android:importantForAutofill="no"
                                android:inputType="text"
                                android:padding="@dimen/_9sdp"
                                android:textColor="@color/light_text_color"
                                android:textColorHint="@color/light_text_color"
                                android:textSize="@dimen/_9sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/address"
                                android:textColor="@color/app_green"
                                android:textSize="@dimen/_10sdp"
                                app:fontFamily="@font/opensans_bold" />

                            <EditText
                                android:id="@+id/edit_enter_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/pay_later_edit_bg"
                                android:fontFamily="@font/opensans_semibold"
                                android:hint="@string/enter_your_full_address"
                                android:importantForAutofill="no"
                                android:inputType="text"
                                android:padding="@dimen/_9sdp"
                                android:textColor="@color/light_text_color"
                                android:textColorHint="@color/light_text_color"
                                android:textSize="@dimen/_9sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/pincode"
                                android:textColor="@color/app_green"
                                android:textSize="@dimen/_10sdp"
                                app:fontFamily="@font/opensans_bold" />

                            <EditText
                                android:id="@+id/edit_pinCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/pay_later_edit_bg"
                                android:fontFamily="@font/opensans_semibold"
                                android:hint="@string/enter_your_pin"
                                android:importantForAutofill="no"
                                android:inputType="number"
                                android:padding="@dimen/_9sdp"
                                android:textColor="@color/light_text_color"
                                android:textColorHint="@color/light_text_color"
                                android:textSize="@dimen/_9sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="@string/alternateNo"
                                android:textColor="@color/app_green"
                                android:textSize="@dimen/_10sdp"
                                app:fontFamily="@font/opensans_bold" />

                            <EditText
                                android:id="@+id/edit_alternateMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/pay_later_edit_bg"
                                android:fontFamily="@font/opensans_semibold"
                                android:hint="@string/enter_alterenate_mobile_no"
                                android:importantForAutofill="no"
                                android:inputType="phone"
                                android:padding="@dimen/_9sdp"
                                android:textColor="@color/light_text_color"
                                android:textColorHint="@color/light_text_color"
                                android:textSize="@dimen/_9sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_toLeftOf="@+id/li_right"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Price:"
                                                android:textColor="@color/app_green"
                                                android:textSize="@dimen/_9sdp"
                                                app:fontFamily="@font/opensans_semibold" />

                                            <TextView
                                                android:id="@+id/tvPricee"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_2sdp"
                                                android:text="₹ 50.00/Session"
                                                android:textColor="@color/app_green"
                                                android:textSize="@dimen/_9sdp"
                                                app:fontFamily="@font/opensans_semibold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/li_offerr"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Offer Price:"
                                                android:textColor="@color/app_green"
                                                android:textSize="@dimen/_9sdp"
                                                app:fontFamily="@font/opensans_semibold" />

                                            <TextView
                                                android:id="@+id/tvOfferPricee"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="@dimen/_4sdp"
                                                android:textColor="@color/app_green"
                                                android:textSize="@dimen/_9sdp"
                                                app:fontFamily="@font/opensans_semibold" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/li_right"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvCouponDiss"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_marginBottom="@dimen/_3sdp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:text="Coupon Discount : 50"
                                            android:textColor="@color/light_text_color"
                                            android:textSize="@dimen/_9sdp"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/tvSubtotall"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:text="ckjsf"
                                            android:textColor="@color/light_text_color"
                                            android:textSize="@dimen/_9sdp"
                                            app:fontFamily="@font/opensans_semibold" />

                                        <TextView
                                            android:id="@+id/tvTaxx"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:fontFamily="@font/opensans_semibold"
                                            android:text="bsa"
                                            android:textColor="@color/light_text_color"
                                            android:textSize="@dimen/_9sdp" />

                                    </LinearLayout>
                                </RelativeLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:src="@drawable/dotted_line" />

                                <TextView
                                    android:id="@+id/tvTotalAmountt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="bkcbasck"
                                    android:textColor="@color/app_green"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/pay_later_edit_bg"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:gravity="center_horizontal"
                                    android:fontFamily="@font/opensans_bold"
                                    android:text="@string/permission_slip"
                                    android:textColor="@color/app_green"
                                    android:textSize="@dimen/_11sdp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:fontFamily="@font/opensans_semibold"
                                    android:text="@string/permission_quets"
                                    android:textColor="@color/transparent_75_white"
                                    android:textSize="@dimen/_8sdp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:fontFamily="@font/opensans_bold"
                                    android:text="@string/child_info"
                                    android:textColor="@color/light_text_color"
                                    android:textSize="@dimen/_10sdp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_3sdp">

                                    <CheckBox
                                        android:id="@+id/ch_terams"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:buttonTint="@color/light_text_color" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/_1sdp"
                                        android:layout_toEndOf="@+id/ch_terams"
                                        android:text="@string/terms_pay_later"
                                        android:textColor="@color/light_text_color"
                                        android:textSize="@dimen/_7sdp"
                                        app:fontFamily="@font/opensans_semibold" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <CheckBox
                                        android:id="@+id/ch_terams_no"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:buttonTint="@color/light_text_color" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/_1sdp"
                                        android:layout_toEndOf="@+id/ch_terams_no"
                                        android:text="@string/terms_pay_later_no"
                                        android:textColor="@color/light_text_color"
                                        android:textSize="@dimen/_7sdp"
                                        app:fontFamily="@font/opensans_semibold" />
                                </RelativeLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-1dp"
                                android:padding="@dimen/_5sdp"
                                android:background="@drawable/upload_signature_bg"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/opensans_bold"
                                    android:text="@string/parent_signature"
                                    android:textColor="@color/light_text_color"
                                    android:textSize="@dimen/_8sdp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="@dimen/_120sdp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:scaleType="centerInside"
                                        android:background="@color/bckground_light"
                                        android:layout_alignParentStart="true" />
                                    <FrameLayout
                                        android:layout_width="@dimen/_100sdp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_height="@dimen/_30sdp"
                                        android:background="@color/colorPrimary">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:background="@color/app_red" />

                                        <View
                                            android:layout_width="0.9dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/app_red" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:layout_gravity="bottom"
                                            android:background="@color/app_redd" />

                                        <View
                                            android:layout_width="@dimen/_1sdp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="end"
                                            android:background="@color/app_redd" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:padding="@dimen/_5sdp"
                                            android:text="@string/upload_signature"
                                            android:textAllCaps="true"
                                            android:textColor="@color/light_text_color"
                                            android:textSize="@dimen/_9sdp"
                                            app:fontFamily="@font/opensans_semibold" />

                                    </FrameLayout>
                                </RelativeLayout>


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/flSubmitDetails"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/colorPrimary">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/app_red" />

                    <View
                        android:layout_width="0.9dp"
                        android:layout_height="match_parent"
                        android:background="@color/app_red" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="bottom"
                        android:background="@color/app_redd" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:background="@color/app_redd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/submit_details"
                        android:textAllCaps="true"
                        android:textColor="@color/light_text_color"
                        android:textSize="@dimen/_9sdp"
                        app:fontFamily="@font/opensans_semibold" />

                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
