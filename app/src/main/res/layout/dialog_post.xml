<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/send_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:visibility="visible"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_imagee"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:src="@drawable/user_default" />

            <EditText
                android:id="@+id/up_textt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toLeftOf="@+id/up_imagee"
                android:layout_toEndOf="@+id/user_imagee"
                android:background="@color/white"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/_2sdp"
                android:hint="Type here and click the post button"
                android:inputType="textMultiLine"
                android:minHeight="@dimen/_40sdp"
                android:textSize="@dimen/_10sdp"
                android:padding="2dp"
                android:textColor="@color/edit_text_color"
                android:textColorHint="@color/edit_text_color" />

            <ImageView
                android:id="@+id/up_imagee"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentEnd="true"
                android:src="@color/black50"
                android:layout_centerVertical="true"
                android:contentDescription="@string/up_image"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/link_layout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_bg_red_round_border"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/link_image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:contentDescription="@string/up_image"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/link_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/link_image"
                android:fontFamily="@font/opensans_regular"
                android:gravity="start"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/link_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/link_title"
                android:layout_toEndOf="@+id/link_image"
                android:fontFamily="@font/opensans_regular"
                android:gravity="start"
                android:textColor="@color/text_grey2"
                android:textSize="15sp" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_smoke"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/add_photoo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@+id/p"
                    android:padding="5dp"
                    android:src="@drawable/photo" />

                <TextView
                    android:id="@+id/p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:text="Photos"
                    android:textColor="@color/bckground"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/add_videoo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@+id/v"
                    android:padding="5dp"
                    android:src="@drawable/video" />

                <TextView
                    android:id="@+id/v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:text="Videos"
                    android:textColor="@color/bckground"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="1dp">

                <Spinner
                    android:id="@+id/spn_privacyy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/privacy2"
                    android:paddingEnd="@dimen/_10sdp"
                    android:theme="@style/spinnerPagee"
                    android:backgroundTint="@color/bckground"
                    />

                <Switch
                    android:id="@+id/privacy_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/privacy_setting"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center"
                    android:text="Public"
                    android:textColor="@color/text_grey2"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/add_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@+id/c"
                    android:padding="5dp"
                    android:src="@drawable/chat" />

                <TextView
                    android:id="@+id/c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center"
                    android:text="@string/chat"
                    android:textColor="@color/text_grey2"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>