<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootView"
    android:layout_height="match_parent"
    android:background="@drawable/chat_bg">

    <include
        android:id="@+id/appbar"
        layout="@layout/main_app_bar" />
    <WebView
        android:id="@+id/web_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_above="@+id/img_attachd"
        android:layout_below="@+id/appbar" />

    <ImageView
        android:id="@+id/img_attachd"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/rel_buttom"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lin_color"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel_buttom"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_58sdp"
        android:layout_marginBottom="-18dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:visibility="gone"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fadingEdge="none" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_170sdp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel_buttom"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-18dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:visibility="gone"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fadingEdge="none" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:id="@+id/rel_buttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        >

        <ImageView
            android:id="@+id/img_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_insert_emoticon_black_24dp" />

        <com.vanniktech.emoji.EmojiEditText
            android:id="@+id/message_edittiext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@+id/lin_last"
            android:layout_toEndOf="@+id/img_emoji"
            android:background="@drawable/edit_bg"
            android:hint="Write something.."
            android:padding="@dimen/_7sdp"
            android:singleLine="false"
            android:textColor="#555555"
            android:textColorHint="#A1A1A1"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/lin_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_send_message"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_attached_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/ic_attach_file_black_24dp"
                android:padding="@dimen/_5sdp"
                android:rotation="-45" />

            <FrameLayout
                android:id="@+id/img_change_color"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:elevation="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:background="@drawable/circle_button">

            </FrameLayout>

        </LinearLayout>
        <FrameLayout
            android:id="@+id/img_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/circle_button"
            android:elevation="@dimen/_2sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_2sdp"
                android:background="@drawable/ic_send_black_24dp" />
        </FrameLayout>


    </RelativeLayout>



    <ImageView
        android:id="@+id/big_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone" />

</RelativeLayout>