<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10sdp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/booking_fileter_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sorting_by_experience"
        android:textColor="@color/light_text_color"
        android:textSize="@dimen/_10sdp"
        app:fontFamily="@font/opensans_regular" />
        <TextView
            android:id="@+id/tv_short_by_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:textColor="@color/light_text_color"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/opensans_regular" />
    </LinearLayout>
    <SeekBar
        android:id="@+id/seek_bar_short_by_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:min="1"
        android:max="20"
        android:layout_marginEnd="@dimen/_10sdp"
        android:theme="@android:style/Theme.Material" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sorting_by_price"
        android:textColor="@color/light_text_color"
        android:textSize="@dimen/_10sdp"
        app:fontFamily="@font/opensans_regular" />
        <TextView
            android:id="@+id/tv_short_by_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:textColor="@color/light_text_color"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="@font/opensans_regular" />
    </LinearLayout>
    <SeekBar
        android:id="@+id/seek_bar_short_by_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:min="100"
        android:max="2000"
        android:layout_marginEnd="@dimen/_10sdp"
        android:theme="@android:style/Theme.Material" />

    <FrameLayout
        android:id="@+id/fl_short"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_gravity="right"
        android:background="@color/bckground">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/bckground_light"/>
        <View
            android:layout_width="0.9dp"
            android:layout_height="match_parent"
            android:background="@color/bckground_light"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="bottom"
            android:background="@color/black"/>
        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/_2sdp"
            android:padding="@dimen/_5sdp"
            android:text="Short"
            android:gravity="center"
            android:textColor="#E0FFFF"
            android:textSize="@dimen/_10sdp"
            app:drawableStartCompat="@drawable/ic_sort_black_24dp"
            app:drawableTint="#E0FFFF"
            app:fontFamily="@font/opensans_semibold" />

    </FrameLayout>

</LinearLayout>