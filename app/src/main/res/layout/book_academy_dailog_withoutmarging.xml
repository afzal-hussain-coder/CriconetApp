<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_view"
    android:paddingTop="@dimen/_16sdp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <RelativeLayout
        android:id="@+id/slideView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/canvas_top_curve_bcgrounddark_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:text="@string/slide_down"
            android:fontFamily="@font/opensans_semibold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:paddingBottom="@dimen/_10sdp"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/line_gradient"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_academyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:text="Venkateshwar Cricket Academy"
                    android:fontFamily="@font/opensans_extrabold"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/white_smoke" />
                <TextView
                    android:id="@+id/tv_academyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Delhi Dwarka Sector 10"
                    android:fontFamily="@font/opensans_extrabold"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/white_smoke" />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="â‚¹ 2000.00/Month"
                    android:fontFamily="@font/opensans_extrabold"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/app_green" />
                <RatingBar
                    android:id="@+id/rating_bar_revieww"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:numStars="5"
                    android:rating="3"
                    android:theme="@style/RatingBar"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/tv_specilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Batting, Bowling, Fielding, Wicket Keeping, Mental, Tactical ,Physical Coaching, Training Academy"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/gray" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/available_session"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:background="@color/dim_grey"
                android:textAllCaps="true"
                android:textColor="@color/white"
                app:fontFamily="@font/opensans_semibold"
                android:textSize="@dimen/_10sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_vieww"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/edit_button_bg"
                android:visibility="visible"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/opensans_semibold"
                android:text="@string/Done"
                android:textAllCaps="true"
                android:textColor="@color/light_text_color"
                android:textSize="@dimen/_12sdp" />



        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
