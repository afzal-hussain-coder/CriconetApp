<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bckground_light">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:cardBackgroundColor="@color/bckground"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_coach_profile"
                            android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivProfileImage"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_gravity="center_vertical|left"
                            android:src="@drawable/cover" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvCoachName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="jlajdla"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12sdp"
                                    app:fontFamily="@font/opensans_semibold" />

                                <TextView
                                    android:id="@+id/tvCoacTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvCoachName"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="kjbckjaB"
                                    android:textColor="@color/light_text_color"
                                    android:textSize="@dimen/_10sdp"
                                    app:fontFamily="@font/opensans_semibold" />
                                <TextView
                                    android:id="@+id/tvCoacExp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvCoachName"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:text="kjbckjaB"
                                    android:textColor="@color/light_text_color"
                                    android:textSize="@dimen/_10sdp"
                                    app:fontFamily="@font/opensans_regular" />
                            </LinearLayout>


                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp">

                            <LinearLayout
                                android:id="@+id/lip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text="hjkasf"
                                    android:textColor="@color/app_green"
                                    android:textSize="@dimen/_10sdp"
                                    app:fontFamily="@font/opensans_semibold" />

                                <TextView
                                    android:id="@+id/tvOfferPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:text="bkqd"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:textColor="@color/app_green"
                                    android:textSize="@dimen/_10sdp"
                                    app:fontFamily="@font/opensans_semibold" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_toEndOf="@+id/lip"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:gravity="left"
                                        android:text="Session Date"
                                        android:textColor="@color/bckground_light"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:gravity="left"
                                        android:text="bjabd"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:gravity="left"
                                        android:text="Session Time"
                                        android:textColor="@color/bckground_light"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/tvtime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:fontFamily="@font/opensans_semibold"
                                        android:gravity="left"
                                        android:text="kjbc"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_10sdp" />
                                </LinearLayout>


                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvtime">
                        <TextView
                            android:id="@+id/tvCouponDis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="bsa"
                            android:visibility="gone"
                            android:textColor="@color/light_text_color"
                            android:textSize="@dimen/_10sdp" />
                        <TextView
                            android:id="@+id/tvSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:text=""
                            android:textColor="@color/light_text_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/opensans_semibold" />

                        <TextView
                            android:id="@+id/tvTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="bsa"
                            android:textColor="@color/light_text_color"
                            android:textSize="@dimen/_10sdp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:src="@drawable/dotted_line" />

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="@font/opensans_semibold"
                            android:text="bkcbasck"
                            android:textColor="@color/app_green"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:id="@+id/rel_apply"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_10sdp">

                <EditText
                    android:id="@+id/edit_text_apply_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/btnApplayCoupon"
                    android:background="@drawable/coupon_bg"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:hint="@string/enter_coupon_code"
                    android:importantForAutofill="no"
                    android:fontFamily="@font/opensans_semibold"
                    android:inputType="text"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/light_text_color"
                    android:textColorHint="@color/light_text_color"
                    android:textSize="@dimen/_10sdp" />

                <FrameLayout
                    android:id="@+id/btnApplayCoupon"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorPrimary">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/app_red"/>
                    <View
                        android:layout_width="0.9dp"
                        android:layout_height="match_parent"
                        android:background="@color/app_red"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="bottom"
                        android:background="@color/app_redd"/>
                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:background="@color/app_redd"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/applay_coupon"
                        android:textColor="@color/light_text_color"
                        android:textSize="@dimen/_10sdp"
                        app:fontFamily="@font/opensans_semibold" />

                </FrameLayout>
            </RelativeLayout>
            <FrameLayout
                android:id="@+id/fl_removecoupon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/colorPrimary">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/app_red"/>
                <View
                    android:layout_width="0.9dp"
                    android:layout_height="match_parent"
                    android:background="@color/app_red"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="bottom"
                    android:background="@color/app_redd"/>
                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@color/app_redd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Remove Coupon"
                    android:textAllCaps="true"
                    android:textColor="@color/light_text_color"
                    android:textSize="@dimen/_10sdp"
                    app:fontFamily="@font/opensans_semibold" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnPaynow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/colorPrimary">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/app_red"/>
                <View
                    android:layout_width="0.9dp"
                    android:layout_height="match_parent"
                    android:background="@color/app_red"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="bottom"
                    android:background="@color/app_redd"/>
                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@color/app_redd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/pay_now"
                    android:textAllCaps="true"
                    android:textColor="@color/light_text_color"
                    android:textSize="@dimen/_10sdp"
                    app:fontFamily="@font/opensans_semibold" />

            </FrameLayout>
            <FrameLayout
                android:id="@+id/btnPayLater"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/colorPrimary">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/app_red"/>
                <View
                    android:layout_width="0.9dp"
                    android:layout_height="match_parent"
                    android:background="@color/app_red"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_gravity="bottom"
                    android:background="@color/app_redd"/>
                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@color/app_redd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/pay_later"
                    android:textAllCaps="true"
                    android:textColor="@color/light_text_color"
                    android:textSize="@dimen/_10sdp"
                    app:fontFamily="@font/opensans_semibold" />

            </FrameLayout>

            <!--<TextView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_corner_red"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:text="@string/pay_now"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />-->

            <TextView
                android:id="@+id/tv_criconet_support_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/opensans_bold"
                android:gravity="center_horizontal"
                android:textColor="@color/app_green"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/li_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <FrameLayout
                    android:id="@+id/fl_call"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/app_red"/>
                    <View
                        android:layout_width="0.9dp"
                        android:layout_height="match_parent"
                        android:background="@color/app_red"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="bottom"
                        android:background="@color/app_redd"/>
                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:background="@color/app_redd"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/call_now"
                        android:textColor="@color/light_text_color"
                        android:textSize="@dimen/_10sdp"
                        app:drawableStartCompat="@drawable/ic_call_black_24dp"
                        app:drawableTint="@color/light_text_color"
                        app:fontFamily="@font/opensans_semibold" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_whatsapp"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/app_red"/>
                    <View
                        android:layout_width="0.9dp"
                        android:layout_height="match_parent"
                        android:background="@color/app_red"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="bottom"
                        android:background="@color/app_redd"/>
                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:background="@color/app_redd"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/_2sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/whatsapp"
                        android:textColor="@color/light_text_color"
                        android:textSize="@dimen/_10sdp"
                        app:drawableStartCompat="@drawable/ic_whatsapp"
                        app:fontFamily="@font/opensans_semibold" />

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/dim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/black_semi_transparent"
        android:fitsSystemWindows="false"
        />

    <include layout="@layout/pay_later_slide_down_dialog"
        />

</RelativeLayout>