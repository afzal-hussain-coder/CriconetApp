<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
    </style>
    <!--<item name="colorControlActivated">@color/white</item>-->
    <!--<item name="colorControlHighlight">@color/white</item>-->
    <!--<item name="android:textColorHint">@color/white</item>-->

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyHintTextDark" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="MyHintTextDarkk" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/bckground</item>
        <item name="android:textColorHint">@color/bckground</item>
        <item name="colorControlNormal">@color/bckground</item>
        <item name="colorControlActivated">@color/bckground</item>
        <item name="colorAccent">@color/bckground</item>
        <item name="colorControlHighlight">@color/bckground</item>
    </style>

    <style name="L2TextWhite">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NotificationUIText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/transparent_75_white</item>
    </style>

    <style name="spinnerTheme">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:background">@color/bckground</item>
    </style>
    <style name="spinnerThemee">
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@color/bckground</item>
    </style>

    <style name="spinnerPage">
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:background">@color/bckground</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>


    <style name="spinnerPagee">
        <item name="android:textColor">@color/bckground</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="formDropDown">

        <item name="android:textSize">@dimen/_14sdp</item>

        <item name="android:background">@drawable/edit_text_bg</item>

        <item name="android:gravity">center_vertical</item>

    </style>
    <style name="formDropDownCoach">

        <item name="android:textSize">@dimen/_8sdp</item>

        <item name="android:background">@drawable/edit_text_bg</item>

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#EBEBEB</item>
        <item name="colorControlActivated">#FDFEFF</item>
    </style>
    <style name="RatingBarr" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/bckground</item>
        <item name="colorControlActivated">@color/app_green</item>
    </style>

    <style name="checkbox" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_text_color</item>
        <item name="colorControlActivated">@color/light_text_color</item>
    </style>

    <style name="CropTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-30dp</item>
    </style>


</resources>
